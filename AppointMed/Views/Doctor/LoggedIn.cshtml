
@if (Session["DoctorId"] != null)
{
    
       @Html.Partial("../Home/headPages")

        <section id="services" class="bg-light-gray">
            <div class="container">
                <h4> Hello @Session["FirstName"].ToString(),</h4>
                <p>
                   Please, select below what you would like to do.
                </p>
                <br />
                <br />
                <br />
                <br />


                <div class="row text-center">
                    <div class="col-md-4">
                        <a href="~/Schedulle/Schedule" class="optionsDoctor">
                            <span class="fa-stack fa-4x">
                                <i class="fa fa-circle fa-stack-2x text-success"></i>
                                <i class="fa fa-calendar-o fa-stack-1x fa-inverse"></i>
                            </span>
                            <h4 class="service-heading">Add Schedule</h4>
                            <p class="text-muted">Set up your schedule.</p>
                        </a>
                    </div>

                    <div class="col-md-4">
                        <a href="~/Schedulle/List" class="optionsDoctor">
                            <span class="fa-stack fa-4x">
                                <i class="fa fa-circle fa-stack-2x text-success"></i>
                                <i class="fa fa-times fa-stack-1x fa-inverse"></i>
                            </span>
                            <h4 class="service-heading">Cancel Schedule</h4>
                            <p class="text-muted">Cancel a schedule.</p>
                            </a>
                    </div>

                    <div class="col-md-4">
                        <span class="fa-stack fa-4x">
                            <i class="fa fa-circle fa-stack-2x text-success"></i>
                            <i class="fa fa-file-text-o fa-stack-1x fa-inverse"></i>
                        </span>
                        <h4 class="service-heading">See History</h4>
                        <p class="text-muted">See all your schedule.</p>
                    </div>
                </div>

            </div>

        </section>

        @Html.Partial("../Home/footPages")
   

}


